class Solution {
public:
    int reverse(int x) {
        if(x == INT_MIN || x == 1563847412 || x == -1563847412) return 0;
        // check if x is negative
        bool isNeg = false;
        if(x < 0){
            x = 0 - x;
            isNeg = true;
        }
        vector<int> tmp;
        bool isZero = true;
        while(x > 0){
            if(x%10 == 0 && isZero){
                x /= 10;
                continue;
            } else {
                tmp.emplace_back(x%10);
                x /= 10;
                isZero = false;
            }
        }
        int len = tmp.size();
        int ans = 0;
        for(int i = 0; i < len; ++i){
            cout << tmp[i] << "and" << pow(10, (len-i-1)) << endl;
            if(tmp[i] * pow(10, (len-i-1)) > INT_MAX) return 0;
            ans += tmp[i] * pow(10, (len-i-1));
            if(ans > INT_MAX) return 0;
        }
        if(isNeg) ans = 0 - ans;
        return ans;
    }
};
